{
  "name": "middot",
  "version": "1.0.0",
  "description": "Sophisticated TypeScript middot Â· (U+00B7) with type guard for React/Vue/Svelte/TS",
  "keywords": [
    "middot",
    "bullet",
    "dot",
    "unicode",
    "typescript",
    "react",
    "vue",
    "svelte"
  ],
  "author": "timtjoe",
  "license": "MIT",
  "repository": "https://github.com/timtjoe/middot",
  "homepage": "https://github.com/timtjoe/middot#readme",
  "bugs": "https://github.com/timtjoe/middot/issues",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build",
    "dev": "bun --watch index.ts",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check:types": "bun run typecheck",
    "test": "bun test",
    "benchmark": "bun run benchmark.ts",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "ci": "bun run check:types && bun test --coverage && bun run build",
    "prepublishOnly": "bun run ci"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/node": "^22.7.4",
    "standard-version": "^9.5.0",
    "typescript": "^5.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
