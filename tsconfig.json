{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "index.ts",
    "lib.ts",
    "benchmark.ts",
    "**/*.test.ts" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}